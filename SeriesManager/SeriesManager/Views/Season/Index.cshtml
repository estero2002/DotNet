@model IEnumerable<SeriesManager.Models.Season>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            Show
        </th>
        <th>
            Number
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Show.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Number)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.SeasonID }) |
            @Html.ActionLink("Details", "Details", new { id=item.SeasonID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.SeasonID })
        </td>
    </tr>
}

</table>
